}

package_postgresql-doc() {
  cd ${_D}
  local CONTENTS="--exclude=usr/share/doc/${pkgbase}/contrib
        usr/share/doc/${pkgbase}"
  pkgdesc="documentation for PostgreSQL"
  tar -c ${CONTENTS} | tar -xC ${pkgdir}
}

